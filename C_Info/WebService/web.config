<configuration>
    <configSections>
        <section name="servers" requirePermission="false" type="EasySite.Modules.C_Info.ServersConfigSectionHandler, EasySite.Modules.C_Info" />
    </configSections>
    <system.web>
        <httpModules>
            <clear/>
        </httpModules>
        <webServices>
            <protocols>
                <add name="HttpPost" />
                <add name="HttpGet" />
            </protocols>
        </webServices>
    </system.web>
    <system.webServer>
        <modules>
            <clear/>
        </modules>
		<httpProtocol>
            <customHeaders>
                <remove name="Cache-Control" />
            </customHeaders>
        </httpProtocol>
    </system.webServer>
    <!-- name须为Web服务器的计算机名称 -->
    <servers skipAuth="false">
