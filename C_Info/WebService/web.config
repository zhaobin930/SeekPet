        <add name="server2" friendlyName="备用服务器" address="http://192.168.0.30/EasySite" editorUserName="host" editorPassword="esshost" beDraft="true" />   
 -->   </servers>
    <location path="C_InfoService.asmx">
        <system.webServer>
            <security>
                <!--<ipSecurity>
                    <add ipAddress="10.0.0.1" allowed="true" />
                    <add ipAddress="*" />
                </ipSecurity>-->
            </security>
        </system.webServer>
    </location>
</configuration>